<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview1"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@drawable/layoutcategoryshape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="7"
                    android:orientation="horizontal"
                    android:id="@+id/linearlayoutcategory"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/imageviewrasmcategory"
                            android:layout_margin="10dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/pishiriqlar"
                            android:layout_width="30dp"
                            android:layout_height="30dp"></ImageView>
                        <TextView
                            android:id="@+id/textviewcategoryname"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/imageviewrasmcategory"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:text="Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                    </RelativeLayout>

                </LinearLayout>
                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_weight="8"
                    android:id="@+id/imageviewnonushta"
                    android:src="@drawable/yupqavafli"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"></ImageView>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>